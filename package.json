{
  "name": "typescript-react-boilerplate-with-eslint-prettier-styled-components",
  "author": {
    "name": "Rok Stojnsek"
  },
  "license": "MIT",
  "version": "0.0.1",
  "scripts": {
    "start": "cross-env PORT=5555 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "lint": "eslint --ignore-path .gitignore . --ext ts --ext tsx --ext js --ext jsx",
    "lint:fix": "eslint --fix --ignore-path .gitignore . --ext ts --ext tsx --ext js --ext jsx",
    "deploy": "node ./node_modules/react-deploy-sftp/cli.js deploy production",
    "deploy:dev": "yarn build && node ./node_modules/react-deploy-sftp/cli.js deploy development"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint && yarn typecheck"
    }
  },
  "dependencies": {
    "i18next": "^19.8.4",
    "i18next-browser-languagedetector": "^6.0.1",
    "i18next-http-backend": "^1.0.21",
    "polished": "^4.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-i18next": "^11.8.4",
    "react-scripts": "3.4.1",
    "rebass": "^4.0.7",
    "styled-components": "^5.2.1",
    "styled-reset": "^4.3.3"
  },
  "devDependencies": {
    "@babel/helper-regex": "^7.10.5",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/rebass": "^4.0.7",
    "@types/styled-components": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "cross-env": "^7.0.3",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-simple-import-sort": "^5.0.0",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "react-deploy-sftp": "^1.0.0",
    "typescript": "~3.7.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
